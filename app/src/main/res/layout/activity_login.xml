<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="20dip">


  <LinearLayout
      android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/btnBackArrow2"
          android:layout_width="23dp"
          android:layout_height="20dp"
          android:layout_marginBottom="45dp"
          android:onClick="onBackButton2"
          app:srcCompat="@drawable/ic_baseline_arrow_back_24" />


<!--      <TextView-->
<!--          android:id="@+id/btnBack2"-->
<!--          android:layout_width="wrap_content"-->
<!--          android:layout_height="wrap_content"-->
<!--          android:layout_marginBottom="45dp"-->
<!--          android:onClick="onBackButton2"-->
<!--          android:text="Back"-->
<!--          android:textAlignment="center"-->
<!--          android:textColor="@color/black"-->
<!--          android:textSize="15sp" />-->

    </TableRow>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Login in to your account"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="15sp"/>


    <EditText
        android:id="@+id/Email2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:drawableRight = "@drawable/ic_baseline_email_24"
        android:hint="Email Address"

        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Pass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:drawableRight = "@drawable/ic_baseline_lock_24"
        android:hint="Password"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/textviewf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Forgot password?"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnSogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Login"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:backgroundTint="@color/black"
        android:textColorLink="@color/white" />


  <!--  <Button-->
  <!--      android:id="@+id/btnUserForgottPass"-->
  <!--      android:layout_width="match_parent"-->
  <!--      android:layout_height="wrap_content"-->
  <!--      android:text="Forgot password" />-->

    <TextView
        android:id="@+id/textviewsu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:text="@string/sign_up_optional"
        android:textStyle="bold"/>
