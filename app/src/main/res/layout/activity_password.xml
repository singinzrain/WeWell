<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="20dip">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:context=".LoginActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
      <ImageView
            android:id="@+id/btnBackArrowPass"
          android:layout_width="23dp"
          android:layout_height="20dp"
          android:layout_marginBottom="45dp"
          android:onClick="onBackButton"
          app:srcCompat="@drawable/ic_baseline_arrow_back_24" />


    </TableRow>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Enter the email associated with your account and we\'ll send an email with instructions to reset your password."
        android:textAlignment="viewStart"
        android:textColor="@color/quantum_grey600"
        android:textSize="15sp"/>


    <EditText
        android:id="@+id/etUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:drawableRight = "@drawable/ic_baseline_email_24"
        android:hint="Email Address"

        android:inputType="textEmailAddress" />


    <Button
        android:id="@+id/btnForgotPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Send"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:backgroundTint="@color/black"
        android:textColorLink="@color/white" />




    <TextView
        android:id="@+id/textviewlo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:text="@string/log_in_optional"
        android:textStyle="bold"/>
  </LinearLayout>



</LinearLayout>





